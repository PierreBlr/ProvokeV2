{#{% if ligne.count <= 0 %}
<h2>Votre panier est vide</h2>
{% else %}#}
<div class="container d-flex justify-content-center text-center">
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr class="table-secondary">
                        <th scope="col" width="80"></th>
                        <th scope="col">Articles</th>
                        <th scope="col">Prix Unitaire TTC</th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Prix Total</th>
                    </tr>
                </thead>
                <tbody>
                {% set total = 0 %}
                {% for idart, ligne in app.session.get("cart") %}
                    <tr class="table-secondary">
                        <td width="150">
                            <a href="#"><img src=\uploads\images\article\{{ ligne.article.image }} width="80px" height="80px"></a>
                        </td>
                        <td width="150">
                            <a href="lien_du_produit">{{ ligne.article.nom }}</a>
                        </td>
                        <td width="150">
                            <p>{{ ligne.article.prix }} €</p>
                        </td>
                        <td width="150">
                            <input type="button" value="-" class="qmoins" field="quantite">
                            <input type="number" id="quantite" name="quantite" value="{{ ligne.qtt }}" min="1" max="24">
                            <input type="button" value="+" class="qplus" field="quantite">
                        </td>
                        <td width="150">
                            <p>{{ ligne.article.prix * ligne.qtt }}</p>
                            {% set total = total + (ligne.article.prix * ligne.qtt) %}
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
</div>
<div class="container d-flex justify-content-end text-center">
<div class="d-inline-flex p-2">
        <table class="table mt-5">
            <tbody>
                <tr class="table-primary">
                    <td class="bold">Total de vos achats</td>
                    <td class="bold">{{ total }} €</td>
                </tr>
                <tr class="table-secondary">
                    <td>Dont éco-participation</td>
                    <td class="bold"> 0.06 €</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
{#{% endif %}#}